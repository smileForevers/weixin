<view class="index">
  <!--头部导航-->
  <view class="nav" bindtap="navClick">
    <block wx:for-items="{{item}}">
      <navigator  redirect class="{{item.open ? 'nav-hover' : ''}}" id="{{item.id}}">{{item.name}}</navigator>
    </block>
  </view>
  <view class="main">
    <!--轮播图-->
    <view id="tabImage">
      <view id="list" class="list">
        <block wx:for-items="{{banner}}">
          <view>
            <navigitor >
              <image src="{{item.src}}" />
            </navigitor>
          </view>
        </block>
      </view>
      <view id="tabImageBtn">
        <!--<block wx:for-items="{{banner}}">-->
          <navigitor  class="active"></navigitor>
        <!--</block>-->
      </view>
    </view>
    <!--次导航-->
    <view class="sub-nav">
      <navigator  redirect class="item1">
        <view></view>
        <text>私人FM</text>
      </navigator>
      <navigator  redirect  class="item2">
        <view></view>
        <text>每日歌曲推荐</text>
      </navigator>
      <navigator  redirect  class="item3">
        <view></view>
        <text>云音乐热歌榜</text>
      </navigator>
    </view>
    <view class="content">
      <block wx:for-items="{{list}}">
        <view>
          <view class="tit">
            <view>
              <image src="{{item.logo}}"></image>
              <text>{{item.title}}</text>
            </view>
            <view class="more">更多</view>
          </view>
          <view  class="{{item.class}}">
            <block wx:for-items="{{item.con}}" wx:for-item="con">
              <view class="{{con.class}}">
                <image src="{{con.img}}"></image>
                <text>{{con.text}}</text>
              </view>
            </block>
          </view>
        </view>
      </block>
    </view>
  </view>
  <!--播放信息-->
  <view class="play">
    <view class="left">
      <image src="../image/list4.jpg"></image>
      <view class="left-txt">
        <view>死了都要 . 爱</view>
        <text>G.E.M.邓紫棋</text>
      </view>

    </view>
    <view class="right">
      <image src="../image/play.jpg"></image>
      <image src="../image/next.jpg"></image>
    </view>
  </view>
</view>
